# top-most EditorConfig file
root = true

# A newline ending every file
[*]
charset = utf-8
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.php,sh]
end_of_line = lf

# 4 space indentation
[*.{css,js,php}]
indent_style = tab
indent_size = 4
